<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"

    >

    <midsummer.translation.ui.RippleLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Zimu"
                android:textSize="40sp"
                />

            <TextView
                android:id="@+id/letter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="碱基："
                android:textSize="40sp"
                />

            <TextView
                android:id="@+id/jj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                />

        </LinearLayout>
    </midsummer.translation.ui.RippleLinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="Qing"
                android:text="清除"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/fu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="Fu"
                android:text="复制"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="Q"
                android:text="Q"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="W"
                android:text="W"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="E"
                android:text="E"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="R"
                android:text="R"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="T"
                android:text="T"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="Y"
                android:text="Y"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="U"
                android:text="U"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="I"
                android:text="I"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="O"
                android:text="O"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="P"
                android:text="P"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_weight="1"
                android:onClick="A"
                android:text="A"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,RtlHardcoded"/>

            <Button
                android:id="@+id/s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="S"
                android:text="S"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="D"
                android:text="D"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="F"
                android:text="F"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="G"
                android:text="G"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="H"
                android:text="H"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/j"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="J"
                android:text="J"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/k"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="K"
                android:text="K"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15sp"
                android:layout_weight="1"
                android:onClick="L"
                android:text="L"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,RtlHardcoded"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_weight="1"
                android:onClick="Z"
                android:text="Z"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,RtlHardcoded"/>

            <Button
                android:id="@+id/x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="X"
                android:text="X"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="C"
                android:text="C"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="V"
                android:text="V"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="B"
                android:text="B"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="N"
                android:text="N"
                android:textStyle="bold"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30sp"
                android:layout_weight="1"
                android:onClick="M"
                android:text="M"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,RtlHardcoded"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

